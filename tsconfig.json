{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "lib": ["ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist",
    "baseUrl": "./src",
    // "emitDeclarationOnly": true,
    "newLine": "LF",
    "useDefineForClassFields": false,
    "moduleResolution": "node"
  },
  "include": ["./src/"],
  "checkJs": true
}
