{
  "compilerOptions": {
    "module": "ES6",
    "target": "esnext",
    "strict": true,
    "esModuleInterop": true,
    // "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "dist/types",
    "baseUrl": "./src",
    "emitDeclarationOnly": true,
    "newLine": "LF",
    "moduleResolution": "node"
  },
  "include": ["./src/"],
  "checkJs": true,
  "exclude": ["node_modules"]
}
